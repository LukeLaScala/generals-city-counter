
{
  "name": "Generals.io City Counter",
  "description": "Displays an estimated city count next to each player on Generals.io",
  "version": "1.3",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": { 
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://generals.io/*", "http://eu.generals.io/*"],
      "js": ["content_script.js"],
      "css": ["content_style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
